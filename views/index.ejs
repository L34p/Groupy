<!DOCTYPE html>
<html>
<head>
    <base href="/"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Groupy</title>
    <script>
        (function(d, s, id){
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) {return;}
            js = d.createElement(s);
            js.id = id;js.src = "js/main.js";
            fjs.parentNode.insertBefore(js, fjs);
        })(document, 'script', 'main-script')
    </script>
</head>
<body class="pushable" ng-controller="rootCtrl">
   <div id="mobile-sidebar" class="ui left thin sidebar inverted vertical menu">
       <div class="item">
           <div class="header">Groups</div>
           <div class="menu">
               <a class="item" ng-href="{{'/group/' + group.id}}" ng-repeat="group in groups">
                   {{group.name}}
               </a>
           </div>
       </div>
   </div>
   <div id="mobile-menu" class="ui top fixed inverted borderless menu">
       <div class="ui container">
           <a ng-click="toggle()" class="toc item">
               <i class="sidebar large icon"></i>
           </a>
       </div>
   </div>

   <div id="content-wrapper" class="pusher">
       <div id="sidebar" class="ui left thin sidebar inverted vertical menu">
           <div class="item">
               <div class="header">Groups</div>
               <div class="menu">
                   <a class="item" ng-href="{{'/group/' + group.id}}" ng-repeat="group in groups">
                       {{group.name}}
                   </a>
               </div>
           </div>
       </div>
       <div id="content" ng-view></div>
   </div>
   <div id="fb-root"></div>
</body>
</html>
